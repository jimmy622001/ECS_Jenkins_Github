# AWS Configuration
aws_region   = "us-east-1"
aws_profile  = "prod"
project_name = "ecs-jenkins-production"

# Network Configuration
vpc_cidr              = "10.1.0.0/16"
public_subnet_cidrs   = ["10.1.1.0/24", "10.1.2.0/24", "10.1.3.0/24"]
private_subnet_cidrs  = ["10.1.4.0/24", "10.1.5.0/24", "10.1.6.0/24"]
database_subnet_cidrs = ["10.1.7.0/24", "10.1.8.0/24", "10.1.9.0/24"]
availability_zones    = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Environment
environment = "prod"

# Database Configuration
db_username = "proddbadmin"
db_password = "CHANGE_ME"
db_name     = "prodappdb"

# Application Configuration
container_image = "nginx:stable"
container_port  = 80

# Jenkins Configuration
key_name              = "prod-key"
jenkins_instance_type = "t3.large"
jenkins_version       = "2.222.1"
jenkins_role_name     = "jenkins-ecs-role-prod"

# Security - Restricted to specific IP ranges for production
trusted_ips            = ["10.0.0.0/8", "192.168.0.0/16"] # Restrict to corporate IPs
grafana_admin_password = "CHANGE_ME"
grafana_admin_user     = "prodadmin"
domain_name            = "prod.example.com"

# Production-specific EC2 configuration
ec2_instance_type           = "t3.large"
min_instance_count          = 2
max_instance_count          = 10
desired_instance_count      = 4
root_volume_size            = 50
patch_schedule              = "cron(0 3 ? * MON *)"
maintenance_window_schedule = "cron(0 1 ? * SUN *)"

# Cost optimization and availability
use_spot_instances = false
is_pilot_light     = false